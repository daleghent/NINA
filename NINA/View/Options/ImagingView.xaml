                                Margin="0,0,0,0"
                                DisplayMemberPath="Name"
                                ItemsSource="{Binding DataContext.PluggableStarDetection.Behaviors, ElementName=UC}"
                                SelectedItem="{Binding DataContext.PluggableStarDetection.SelectedBehavior, ElementName=UC}"
                                SelectedValuePath="Name" />
                        </StackPanel>
                        <StackPanel
                            Margin="0,5,0,0"
                            Orientation="Horizontal"
                            Visibility="{Binding DataContext.PluggableStarAnnotator.Behaviors, ElementName=UC, Converter={StaticResource CollectionContainsMoreThanOneItemToVisibilityConverter}}">
