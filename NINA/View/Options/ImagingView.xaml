                                Width="20"
                                Height="20"
                                Margin="5,0,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Command="{Binding DataContext.OpenTargetsFolderDiagCommand, ElementName=UC}">
                                <Path
                                    Margin="2,10,2,0"
                                    Data="{StaticResource DotsSVG}"
                                    Fill="{StaticResource ButtonForegroundBrush}"
                                    Stretch="Uniform"
                                    UseLayoutRounding="True" />
                                <Button.ToolTip>
                                    <TextBlock Text="{ns:Loc LblSequencerTargetsFolderTooltip}" />
                                </Button.ToolTip>
                            </Button>
