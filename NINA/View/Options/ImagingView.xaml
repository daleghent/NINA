                                            Visibility="{Binding AnnotateImage, Converter={StaticResource BooleanToVisibilityCollapsedConverter}}">
                                            <TextBlock
                                                MinWidth="200"
                                                MinHeight="20"
                                                VerticalAlignment="Center"
                                                Text="{ns:Loc LblAnnotateUnlimitedStars}">
                                                <TextBlock.ToolTip>
                                                    <TextBlock Text="{ns:Loc LblAnnotateUnlimitedStarsTooltip}" />
                                                </TextBlock.ToolTip>
                                            </TextBlock>
                                            <CheckBox
                                                Height="25"
                                                HorizontalAlignment="Left"
                                                IsChecked="{Binding AnnotateUnlimitedStars}" />
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </Expander>
                        </Border>
                    </StackPanel>
                </GroupBox>
                <GroupBox DataContext="{Binding SequenceSettings}" Header="{ns:Loc LblSequence}">
                    <StackPanel Orientation="Vertical">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="230" />
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Text="{ns:Loc LblDefaultSequenceFolder}" />
                            <TextBox
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Text="{Binding DefaultSequenceFolder}" />
                            <Button
                                Grid.Column="2"
                                Width="20"
                                Height="20"
                                Margin="5,0,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Command="{Binding DataContext.OpenSequenceFolderDiagCommand, ElementName=UC}">
                                <Path
                                    Margin="2,10,2,0"
                                    Data="{StaticResource DotsSVG}"
                                    Fill="{StaticResource ButtonForegroundBrush}"
                                    Stretch="Uniform"
                                    UseLayoutRounding="True" />
                                <Button.ToolTip>
                                    <TextBlock Text="{ns:Loc LblDefaultSequenceFolderTooltip}" />
                                </Button.ToolTip>
                            </Button>
                        </Grid>
                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="230" />
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Text="{ns:Loc LblSequenceTemplateFolder}" />
                            <TextBox
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Text="{Binding SequencerTemplatesFolder}" />
                            <Button
                                Grid.Column="2"
                                Width="20"
                                Height="20"
                                Margin="5,0,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Command="{Binding DataContext.OpenSequenceTemplateFolderDiagCommand, ElementName=UC}">
                                <Path
                                    Margin="2,10,2,0"
                                    Data="{StaticResource DotsSVG}"
                                    Fill="{StaticResource ButtonForegroundBrush}"
                                    Stretch="Uniform"
                                    UseLayoutRounding="True" />
                                <Button.ToolTip>
                                    <TextBlock Text="{ns:Loc LblSequenceTemplateFolderTooltip}" />
                                </Button.ToolTip>
                            </Button>
                        </Grid>
                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="230" />
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Text="{ns:Loc Lbl_OldSequencer_Template}" />
                            <TextBox
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Text="{Binding TemplatePath}" />
                            <Button
                                Grid.Column="2"
                                Width="20"
                                Height="20"
                                Margin="5,0,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Command="{Binding DataContext.OpenSequenceTemplateDiagCommand, ElementName=UC}">
                                <Path
                                    Margin="2,10,2,0"
                                    Data="{StaticResource DotsSVG}"
                                    Fill="{StaticResource ButtonForegroundBrush}"
                                    Stretch="Uniform"
                                    UseLayoutRounding="True" />
                                <Button.ToolTip>
                                    <TextBlock Text="{ns:Loc LblSequenceTemplateTooltip}" />
                                </Button.ToolTip>
                            </Button>
                        </Grid>
                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="230" />
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                Text="{ns:Loc LblStartupSequenceTemplate}" />
                            <TextBox
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                Text="{Binding StartupSequenceTemplate}" />
                            <Button
                                Grid.Column="2"
                                Width="20"
                                Height="20"
                                Margin="5,0,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Command="{Binding DataContext.OpenStartupSequenceTemplateDiagCommand, ElementName=UC}">
                                <Path
                                    Margin="2,10,2,0"
                                    Data="{StaticResource DotsSVG}"
                                    Fill="{StaticResource ButtonForegroundBrush}"
                                    Stretch="Uniform"
                                    UseLayoutRounding="True" />
                                <Button.ToolTip>
                                    <TextBlock Text="{ns:Loc LblStartupSequenceTemplateTooltip}" />
                                </Button.ToolTip>
                            </Button>
                        </Grid>
                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="230" />
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="Auto" />
