                            Grid.Row="2"
                            Grid.Column="1"
                            Width="75"
                            Height="30"
                            Margin="0,5,0,0"
                            HorizontalAlignment="Left"
                            Command="{Binding DataContext.DockManagerVM.RestoreDockLayoutFromFileCommand, Mode=OneWay, RelativeSource={RelativeSource AncestorType={x:Type nina:MainWindow}, Mode=FindAncestor}}"
                            ToolTip="{ns:Loc LblRestoreDockLayoutFromFileTooltip}">
                            <Path
                                Margin="5"
                                Data="{StaticResource LoadSVG}"
                                Fill="{StaticResource ButtonForegroundBrush}"
                                Stretch="Uniform"
                                UseLayoutRounding="True" />
                        </Button>
                    </Grid>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </UniformGrid>
