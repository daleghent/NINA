                        <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                            <TextBlock
                                MinWidth="230"
                                MinHeight="20"
                                VerticalAlignment="Center"
                                Text="{ns:Loc LblCollapseSequencerTemplatesByDefault}">
                                <TextBlock.ToolTip>
                                    <TextBlock Text="{ns:Loc LblCollapseSequencerTemplatesByDefaultTooltip}" />
                                </TextBlock.ToolTip>
                            </TextBlock>
                            <CheckBox
                                Height="25"
                                HorizontalAlignment="Left"
                                IsChecked="{Binding CollapseSequencerTemplatesByDefault}" />
