                        </StackPanel>
                        <StackPanel
                            Margin="0,5,0,0"
                            Orientation="Horizontal"
                            Visibility="{Binding DataContext.PluggableStarDetection.Behaviors, ElementName=UC, Converter={StaticResource CollectionContainsMoreThanOneItemToVisibilityConverter}}">
                            <TextBlock
                                MinWidth="200"
                                MinHeight="20"
                                VerticalAlignment="Center"
                                Text="{ns:Loc LblStarDetector}" />
