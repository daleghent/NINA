    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding VersionCheckVM.CheckUpdateCommand}" />
            <i:InvokeCommandAction Command="{Binding AppVM.CheckWindowsVersionCommand}" />
            <i:InvokeCommandAction Command="{Binding AppVM.CheckASCOMPlatformVersionCommand}" />
            <i:InvokeCommandAction Command="{Binding AppVM.CheckEphemerisExistsCommand}" />
        </i:EventTrigger>
        <i:EventTrigger EventName="Closing">
            <i:InvokeCommandAction Command="{Binding AppVM.ClosingCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0">
        <Grid x:Name="RootGrid">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid Grid.ColumnSpan="3">
                <TabControl
                    x:Name="MainTabControl"
                    MinWidth="40"
                    SelectedIndex="{Binding AppVM.TabIndex}"
                    TabStripPlacement="Left">
                    <TabItem>
                        <TabItem.Header>
                            <Grid>
                                <Grid
                                    Height="50"
                                    MinWidth="80"
                                    Visibility="{Binding CollapsedSidebar, Source={x:Static settings:Settings.Default}, Converter={StaticResource InverseBooleanToVisibilityCollapsedConverter}}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition Height="10" />
                                    </Grid.RowDefinitions>
                                    <Grid>
                                        <Path
                                            Width="50"
                                            Margin="7.5"
                                            Data="{StaticResource EquipmentSVG}"
                                            Stretch="Uniform"
                                            Style="{StaticResource TabItemPath}"
                                            UseLayoutRounding="True" />
                                    </Grid>
                                    <TextBlock
                                        Grid.Row="1"
                                        Style="{StaticResource SideBarTextBlock}"
                                        Text="{ns:Loc LblEquipment}" />
                                </Grid>
                                <Grid Height="25" Visibility="{Binding CollapsedSidebar, Source={x:Static settings:Settings.Default}, Converter={StaticResource BooleanToVisibilityCollapsedConverter}}">
                                    <Path
                                        Width="25"
                                        Margin="2.5"
                                        Data="{StaticResource EquipmentSVG}"
                                        Stretch="Uniform"
                                        Style="{StaticResource TabItemPath}"
                                        UseLayoutRounding="True" />
                                </Grid>
                            </Grid>
                        </TabItem.Header>
                        <TabItem.Content>
                            <equip:TabPage DataContext="{Binding EquipmentVM}" />
                        </TabItem.Content>
                    </TabItem>
                    <TabItem>
                        <TabItem.Header>
                            <Grid>
                                <Grid Height="50" Visibility="{Binding CollapsedSidebar, Source={x:Static settings:Settings.Default}, Converter={StaticResource InverseBooleanToVisibilityCollapsedConverter}}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition Height="10" />
                                    </Grid.RowDefinitions>

                                    <Path
                                        Width="50"
                                        Margin="5"
                                        Data="{StaticResource MapSVG}"
                                        Stretch="Uniform"
                                        Style="{StaticResource TabItemPath}"
                                        UseLayoutRounding="True" />

                                    <TextBlock
                                        Grid.Row="1"
                                        Style="{StaticResource SideBarTextBlock}"
                                        Text="{ns:Loc LblSkyAtlas}" />
                                </Grid>
                                <Grid Height="25" Visibility="{Binding CollapsedSidebar, Source={x:Static settings:Settings.Default}, Converter={StaticResource BooleanToVisibilityCollapsedConverter}}">
                                    <Path
                                        Width="25"
                                        Margin="2.5"
                                        Data="{StaticResource MapSVG}"
                                        Stretch="Uniform"
                                        Style="{StaticResource TabItemPath}"
                                        UseLayoutRounding="True" />
                                </Grid>
                            </Grid>
                        </TabItem.Header>
                        <TabItem.Content>
                            <view:SkyAtlasView DataContext="{Binding SkyAtlasVM}" />
                        </TabItem.Content>
                    </TabItem>

                    <TabItem>
                        <TabItem.Header>
                            <Grid>
                                <Grid Height="50" Visibility="{Binding CollapsedSidebar, Source={x:Static settings:Settings.Default}, Converter={StaticResource InverseBooleanToVisibilityCollapsedConverter}}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition Height="10" />
                                    </Grid.RowDefinitions>
                                    <Path
                                        Width="50"
                                        Margin="5"
                                        Data="{StaticResource FocusAssistantSVG}"
                                        Stretch="Uniform"
                                        Style="{StaticResource TabItemPath}"
                                        UseLayoutRounding="True" />
                                    <TextBlock
                                        Grid.Row="1"
                                        Style="{StaticResource SideBarTextBlock}"
                                        Text="{ns:Loc LblFraming}" />
                                </Grid>
                                <Grid Height="25" Visibility="{Binding CollapsedSidebar, Source={x:Static settings:Settings.Default}, Converter={StaticResource BooleanToVisibilityCollapsedConverter}}">
                                    <Path
                                        Width="25"
                                        Margin="2.5"
                                        Data="{StaticResource FocusAssistantSVG}"
                                        Stretch="Uniform"
                                        Style="{StaticResource TabItemPath}"
                                        UseLayoutRounding="True" />
                                </Grid>
                            </Grid>
                        </TabItem.Header>
                        <TabItem.Content>
                            <view:FramingAssistantView DataContext="{Binding FramingAssistantVM}" />
                        </TabItem.Content>
                    </TabItem>

                    <TabItem>
                        <TabItem.Header>
                            <Grid>
                                <Grid Height="50" Visibility="{Binding CollapsedSidebar, Source={x:Static settings:Settings.Default}, Converter={StaticResource InverseBooleanToVisibilityCollapsedConverter}}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition Height="10" />
                                    </Grid.RowDefinitions>
                                    <Path
                                        Width="50"
                                        Margin="5"
                                        Data="{StaticResource FlatWizardSVG}"
                                        Stretch="Uniform"
                                        Style="{StaticResource TabItemPath}"
                                        UseLayoutRounding="True" />
                                    <TextBlock
                                        Grid.Row="1"
                                        Style="{StaticResource SideBarTextBlock}"
                                        Text="{ns:Loc LblFlatWizard}" />
                                </Grid>
                                <Grid Height="25" Visibility="{Binding CollapsedSidebar, Source={x:Static settings:Settings.Default}, Converter={StaticResource BooleanToVisibilityCollapsedConverter}}">
                                    <Path
                                        Width="25"
                                        Margin="2.5"
                                        Data="{StaticResource FlatWizardSVG}"
                                        Stretch="Uniform"
                                        Style="{StaticResource TabItemPath}"
                                        UseLayoutRounding="True" />
                                </Grid>
                            </Grid>
                        </TabItem.Header>
                        <TabItem.Content>
                            <view:FlatWizardView x:Name="FlatWizardView" DataContext="{Binding FlatWizardVM}" />
                        </TabItem.Content>
                    </TabItem>

                    <TabItem>
                        <TabItem.Header>
                            <Grid>
                                <Grid Height="50" Visibility="{Binding CollapsedSidebar, Source={x:Static settings:Settings.Default}, Converter={StaticResource InverseBooleanToVisibilityCollapsedConverter}}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition Height="10" />
                                    </Grid.RowDefinitions>
                                    <Path
                                        Width="50"
                                        Margin="5"
                                        Data="{StaticResource SequenceSVG}"
                                        Stretch="Uniform"
                                        Style="{StaticResource TabItemPath}"
                                        UseLayoutRounding="True" />
                                    <TextBlock
                                        Grid.Row="1"
                                        Style="{StaticResource SideBarTextBlock}"
                                        Text="{ns:Loc Lbl_Sequencer_Title}" />
                                </Grid>
                                <Grid Height="25" Visibility="{Binding CollapsedSidebar, Source={x:Static settings:Settings.Default}, Converter={StaticResource BooleanToVisibilityCollapsedConverter}}">
                                    <Path
                                        Width="25"
                                        Margin="2.5"
                                        Data="{StaticResource SequenceSVG}"
                                        Stretch="Uniform"
                                        Style="{StaticResource TabItemPath}"
                                        UseLayoutRounding="True" />
                                </Grid>
                            </Grid>
                        </TabItem.Header>
                        <TabItem.Content>
                            <view:SequenceView DataContext="{Binding SequenceNavigationVM}" />
                        </TabItem.Content>
                    </TabItem>

                    <TabItem DataContext="{Binding DockManagerVM}">
                        <TabItem.Style>
                            <Style BasedOn="{StaticResource LeftTabItem}" TargetType="TabItem">
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Content" Value="{Binding Path=(util:DeferredContent.Content), RelativeSource={RelativeSource Self}}" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter Property="Content" Value="{Binding Content, RelativeSource={RelativeSource Self}}" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TabItem.Style>
                        <TabItem.Header>
                            <Grid>
                                <Grid Height="50" Visibility="{Binding CollapsedSidebar, Source={x:Static settings:Settings.Default}, Converter={StaticResource InverseBooleanToVisibilityCollapsedConverter}}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition Height="10" />
                                    </Grid.RowDefinitions>
                                    <Path
                                        Width="50"
                                        Margin="5"
                                        Data="{StaticResource PictureSVG}"
                                        Stretch="Uniform"
                                        Style="{StaticResource TabItemPath}"
                                        UseLayoutRounding="True" />
                                    <TextBlock
                                        Grid.Row="1"
                                        Style="{StaticResource SideBarTextBlock}"
                                        Text="{ns:Loc LblImaging}" />
                                </Grid>
                                <Grid Height="25" Visibility="{Binding CollapsedSidebar, Source={x:Static settings:Settings.Default}, Converter={StaticResource BooleanToVisibilityCollapsedConverter}}">
                                    <Path
                                        Width="25"
                                        Margin="2.5"
                                        Data="{StaticResource PictureSVG}"
                                        Stretch="Uniform"
                                        Style="{StaticResource TabItemPath}"
                                        UseLayoutRounding="True" />
                                </Grid>
                            </Grid>
                        </TabItem.Header>
                        <!--  The load is deferred to make sure that floatable windows are not loaded on start  -->
                        <util:DeferredContent.Content>
                            <view:OverView x:Name="Overview" />
                        </util:DeferredContent.Content>
                    </TabItem>
                    <TabItem>
                        <TabItem.Header>
                            <Grid>
                                <Grid Height="50" Visibility="{Binding CollapsedSidebar, Source={x:Static settings:Settings.Default}, Converter={StaticResource InverseBooleanToVisibilityCollapsedConverter}}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition Height="10" />
                                    </Grid.RowDefinitions>
                                    <Path
                                        Width="50"
                                        Margin="5"
                                        Data="{StaticResource SettingsSVG}"
                                        Stretch="Uniform"
                                        Style="{StaticResource TabItemPath}"
                                        UseLayoutRounding="True" />
                                    <TextBlock
                                        Grid.Row="1"
                                        Style="{StaticResource SideBarTextBlock}"
                                        Text="{ns:Loc LblOptions}" />
                                </Grid>
                                <Grid Height="25" Visibility="{Binding CollapsedSidebar, Source={x:Static settings:Settings.Default}, Converter={StaticResource BooleanToVisibilityCollapsedConverter}}">
                                    <Path
                                        Width="25"
                                        Margin="2.5"
                                        Data="{StaticResource SettingsSVG}"
                                        Stretch="Uniform"
                                        Style="{StaticResource TabItemPath}"
                                        UseLayoutRounding="True" />
                                </Grid>
                            </Grid>
                        </TabItem.Header>
                        <TabItem.Content>
                            <options:TabPage DataContext="{Binding OptionsVM}" />
                        </TabItem.Content>
                    </TabItem>
                    <TabItem>
                        <TabItem.Header>
                            <Grid>
                                <Grid Height="50" Visibility="{Binding CollapsedSidebar, Source={x:Static settings:Settings.Default}, Converter={StaticResource InverseBooleanToVisibilityCollapsedConverter}}">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition Height="10" />
                                    </Grid.RowDefinitions>
                                    <Path
                                        Width="50"
                                        Margin="5"
                                        Data="{StaticResource PuzzlePieceSVG}"
                                        Stretch="Uniform"
                                        Style="{StaticResource TabItemPath}"
                                        UseLayoutRounding="True" />
                                    <Border
                                        Width="15"
                                        Height="15"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Background="{StaticResource ButtonBackgroundBrush}"
                                        CornerRadius="1"
                                        Visibility="{Binding PluginsVM.AvailablePluginUpdateCount, Converter={StaticResource ZeroToVisibilityConverter}}">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontWeight="Bold"
                                            Foreground="{StaticResource ButtonForegroundBrush}"
                                            Text="{Binding PluginsVM.AvailablePluginUpdateCount}" />
                                    </Border>
                                    <TextBlock
                                        Grid.Row="1"
                                        Style="{StaticResource SideBarTextBlock}"
                                        Text="{ns:Loc LblPlugins}" />
                                </Grid>
                                <Grid Height="25" Visibility="{Binding CollapsedSidebar, Source={x:Static settings:Settings.Default}, Converter={StaticResource BooleanToVisibilityCollapsedConverter}}">
                                    <Path
                                        Width="25"
                                        Margin="2.5"
                                        Data="{StaticResource PuzzlePieceSVG}"
                                        Stretch="Uniform"
                                        Style="{StaticResource TabItemPath}"
                                        UseLayoutRounding="True" />
                                    <Border
                                        Width="13"
                                        Height="13"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Background="{StaticResource ButtonBackgroundBrush}"
                                        CornerRadius="1"
                                        Visibility="{Binding PluginsVM.AvailablePluginUpdateCount, Converter={StaticResource ZeroToVisibilityConverter}}">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontWeight="Bold"
                                            Foreground="{StaticResource ButtonForegroundBrush}"
                                            Text="{Binding PluginsVM.AvailablePluginUpdateCount}" />
                                    </Border>
                                </Grid>
                            </Grid>
                        </TabItem.Header>
                        <TabItem.Content>
                            <plugin:PluginsView DataContext="{Binding PluginsVM}" />
                        </TabItem.Content>
                    </TabItem>
                </TabControl>
            </Grid>

            <Grid
                Grid.Row="1"
                MinWidth="80"
                MaxWidth="80"
                HorizontalAlignment="Left"
                Background="{StaticResource SecondaryBackgroundBrush}"
                Visibility="{Binding CollapsedSidebar, Source={x:Static settings:Settings.Default}, Converter={StaticResource InverseBooleanToVisibilityCollapsedConverter}}">
                <Button Command="{Binding AppVM.CollapseTabControlCommand}" Style="{StaticResource SecondaryBackgroundButton}">
                    <Button.ToolTip>
                        <TextBlock Text="{ns:Loc LblCollapseSidebarTooltip}" />
                    </Button.ToolTip>
                    <TextBlock Foreground="{StaticResource ButtonForegroundDisabledBrush}" Text="&lt;&lt;" />
                </Button>
            </Grid>
            <Grid
                Grid.Row="1"
                MinWidth="40"
                MaxWidth="40"
                HorizontalAlignment="Left"
                Background="{StaticResource SecondaryBackgroundBrush}"
                Visibility="{Binding CollapsedSidebar, Source={x:Static settings:Settings.Default}, Converter={StaticResource BooleanToVisibilityCollapsedConverter}}">
                <Button Command="{Binding AppVM.ExpandTabControlCommand}" Style="{StaticResource SecondaryBackgroundButton}">
                    <Button.ToolTip>
                        <TextBlock Text="{ns:Loc LblExpandSidebarTooltip}" />
                    </Button.ToolTip>
                    <TextBlock Foreground="{StaticResource ButtonForegroundDisabledBrush}" Text="&gt;&gt;" />
                </Button>
            </Grid>
            <Grid
                Width="40"
                Margin="0,0,0,5"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Visibility="{Binding CollapsedSidebar, Source={x:Static settings:Settings.Default}, Converter={StaticResource BooleanToVisibilityCollapsedConverter}}">
                <ninactrl:CancellableButton
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Width="25"
                    Height="25"
                    Margin="5"
                    VerticalAlignment="Center"
                    Background="{StaticResource SecondaryBackgroundBrush}"
                    ButtonForegroundBrush="{StaticResource ButtonForegroundDisabledBrush}"
                    ButtonImage="{StaticResource PowerSVG}"
                    ButtonStyle="{StaticResource SecondaryBackgroundButton}"
                    CancelToolTip="{ns:Loc LblCancel}"
                    Command="{Binding ApplicationDeviceConnectionVM.ConnectAllDevicesCommand}"
                    ToolTip="{ns:Loc LblConnect}"
                    Visibility="{Binding ApplicationDeviceConnectionVM.AllConnected, Converter={StaticResource InverseBoolToVisibilityConverter}}" />
                <ninactrl:CancellableButton
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Width="25"
                    Height="25"
                    Margin="5"
                    VerticalAlignment="Center"
                    Background="{StaticResource SecondaryBackgroundBrush}"
                    ButtonForegroundBrush="{StaticResource ButtonForegroundBrush}"
                    ButtonImage="{StaticResource PowerSVG}"
                    ButtonStyle="{StaticResource SecondaryBackgroundButton}"
                    CancelToolTip="{ns:Loc LblCancel}"
                    Command="{Binding ApplicationDeviceConnectionVM.DisconnectAllDevicesCommand}"
                    ToolTip="{ns:Loc LblDisconnect}"
                    Visibility="{Binding ApplicationDeviceConnectionVM.AllConnected, Converter={StaticResource VisibilityConverter}}" />
                <ninactrl:LoadingControl
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Width="25"
                    Height="25"
                    Margin="5"
                    LoadingImageBrush="{StaticResource PrimaryBrush}"
                    Visibility="{Binding ApplicationDeviceConnectionVM.ConnectAllDevicesCommand.Execution.IsNotCompleted, Converter={StaticResource BooleanToVisibilityCollapsedConverter}, FallbackValue=Collapsed}" />
            </Grid>
            <Grid
                Width="80"
                Margin="0,0,0,5"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Visibility="{Binding CollapsedSidebar, Source={x:Static settings:Settings.Default}, Converter={StaticResource InverseBooleanToVisibilityCollapsedConverter}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60" />
                    <RowDefinition Height="20" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <ninactrl:CancellableButton
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Width="40"
                    Height="40"
                    Margin="10"
                    VerticalAlignment="Center"
                    Background="{StaticResource SecondaryBackgroundBrush}"
                    ButtonForegroundBrush="{StaticResource ButtonForegroundDisabledBrush}"
                    ButtonImage="{StaticResource PowerSVG}"
                    ButtonStyle="{StaticResource SecondaryBackgroundButton}"
                    CancelToolTip="{ns:Loc LblCancel}"
                    Command="{Binding ApplicationDeviceConnectionVM.ConnectAllDevicesCommand}"
                    ToolTip="{ns:Loc LblConnect}"
                    Visibility="{Binding ApplicationDeviceConnectionVM.AllConnected, Converter={StaticResource InverseBoolToVisibilityConverter}}" />
                <ninactrl:CancellableButton
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Width="40"
                    Height="40"
                    Margin="10"
                    VerticalAlignment="Center"
                    Background="{StaticResource SecondaryBackgroundBrush}"
                    ButtonForegroundBrush="{StaticResource ButtonForegroundBrush}"
                    ButtonImage="{StaticResource PowerSVG}"
                    ButtonStyle="{StaticResource SecondaryBackgroundButton}"
                    CancelToolTip="{ns:Loc LblCancel}"
                    Command="{Binding ApplicationDeviceConnectionVM.DisconnectAllDevicesCommand}"
                    ToolTip="{ns:Loc LblDisconnect}"
                    Visibility="{Binding ApplicationDeviceConnectionVM.AllConnected, Converter={StaticResource VisibilityConverter}}" />
                <ninactrl:LoadingControl
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Width="40"
                    Height="40"
                    Margin="5"
                    LoadingImageBrush="{StaticResource PrimaryBrush}"
                    Visibility="{Binding ApplicationDeviceConnectionVM.ConnectAllDevicesCommand.Execution.IsNotCompleted, Converter={StaticResource BooleanToVisibilityCollapsedConverter}, FallbackValue=Collapsed}" />
                <Button
                    Grid.Row="1"
                    Grid.Column="0"
                    Width="20"
                    Height="20"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Right"
                    Command="{Binding OptionsVM.ToggleColorsCommand}"
                    Style="{StaticResource SecondaryBackgroundButton}"
                    WindowChrome.IsHitTestVisibleInChrome="True">
                    <Button.ToolTip>
                        <ToolTip ToolTipService.ShowOnDisabled="True">
                            Toggles colors to alternative color schema
                        </ToolTip>
                    </Button.ToolTip>
                    <Path
                        Margin="2"
                        Data="{StaticResource EyeSVG}"
                        Stretch="Uniform"
                        Style="{StaticResource WindowButtonPath}"
                        UseLayoutRounding="True" />
                </Button>
                <Button
                    Grid.Row="2"
                    Grid.Column="1"
                    Width="20"
                    Height="20"
                    Margin="0,0,3,0"
                    HorizontalAlignment="Right"
                    Command="{Binding AppVM.OpenManualCommand}"
                    Style="{StaticResource SecondaryBackgroundButton}"
                    WindowChrome.IsHitTestVisibleInChrome="True">
                    <Button.ToolTip>
                        <ToolTip ToolTipService.ShowOnDisabled="True">
                            Open Manual (Online)
                        </ToolTip>
                    </Button.ToolTip>
                    <Path
                        Margin="2"
                        Data="{StaticResource QuestionSVG}"
                        Stretch="Uniform"
                        Style="{StaticResource WindowButtonPath}"
                        UseLayoutRounding="True" />
                </Button>
                <Button
                    Grid.Row="2"
                    Grid.Column="2"
                    Width="20"
                    Height="20"
                    Margin="0,0,7.5,0"
                    HorizontalAlignment="Right"
                    Command="{Binding AppVM.OpenAboutCommand}"
                    Style="{StaticResource SecondaryBackgroundButton}"
                    WindowChrome.IsHitTestVisibleInChrome="True">
                    <Button.ToolTip>
                        <ToolTip ToolTipService.ShowOnDisabled="True">
                            About N.I.N.A.
                        </ToolTip>
                    </Button.ToolTip>
                    <Path
                        Margin="2"
                        Data="{StaticResource AboutSVG}"
                        Stretch="Uniform"
                        Style="{StaticResource WindowButtonPath}"
                        UseLayoutRounding="True" />
                </Button>
            </Grid>

            <Border
                Grid.Row="1"
                Grid.Column="1"
                BorderBrush="{StaticResource BorderBrush}"
                BorderThickness="0,1,0,0">

                <ItemsControl VerticalAlignment="Center" ItemsSource="{Binding Path=ApplicationStatusVM.ApplicationStatus}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Margin="5,0,5,0"
                                BorderBrush="{StaticResource BorderBrush}"
                                BorderThickness="0,0,1,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock VerticalAlignment="Center" Text="{Binding Source}" />
                                    <TextBlock
                                        Margin="5,0,5,0"
                                        VerticalAlignment="Center"
                                        Text=":" />
                                    <TextBlock
                                        Margin="5,0,5,0"
                                        VerticalAlignment="Center"
                                        Text="{Binding Status}" />
                                    <Grid
                                        Height="25"
                                        MinWidth="100"
                                        Margin="5,0,5,0">
                                        <ProgressBar
                                            x:Name="pbProgress"
                                            Height="20"
                                            VerticalAlignment="Center"
                                            Maximum="{Binding MaxProgress}"
                                            Minimum="0"
                                            Value="{Binding Progress}" />
                                        <StackPanel
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Orientation="Horizontal">
